<Page x:Class="MusicSchoolDesctopClient.Pages.AddEditMark"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicSchoolDesctopClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление оценки">
    <Page.Resources>
        <Style x:Key="ButtonEntry" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"></Setter>
            <Setter Property="Foreground"  Value="#5A53A0"></Setter>
            <Setter Property="BorderBrush"  Value="#061828"></Setter>
            <Setter Property="Background" Value="#62829E"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                                BorderThickness="5"
                                BorderBrush="#061828" 
                                CornerRadius="10" 
                                Background="{TemplateBinding Background}">

                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>

                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#FF080B4B" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#FF080B1B" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" 
                                                        To="#FF1F246E" 
                                                        Duration="0:0:0.020"/>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#FF080B3B" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" 
                                                        To="#061828" 
                                                        Duration="0:0:0.020"/>

                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#62829E" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0"
                 Grid.ColumnSpan="3"
            
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Foreground="White" 
            Width="50" 
            Height="50" 
            Style="{DynamicResource ButtonEntry}" Click="Button_Click_1" >
            <Image Source="\Image\backpng.png"/>
        </Button>
        <Border
            CornerRadius="20"
            Background="#4C779E"
            Grid.Column="1"
            Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Foreground="White"
                    FontSize="25"
                    Grid.ColumnSpan="2"
                    TextAlignment="Center"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >Оценка</TextBlock>
                <TextBlock 
                    Foreground="White"
                    FontSize="15"
                    Grid.Column="0"
                    Grid.Row="2"
                    TextAlignment="Left"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >Ученик:</TextBlock>
                <TextBlock 
                    Foreground="White"
                    FontSize="15"
                    Grid.Column="0"
                    Grid.Row="1"
                    TextAlignment="Left"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >Урок:</TextBlock>
                <TextBlock 
                    Foreground="White"
                    FontSize="15"
                    Grid.Column="0"
                    Grid.Row="3"
                    TextAlignment="Left"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >Оценка:</TextBlock>
                <ComboBox x:Name="cmbMark" 
                    FontSize="15"
                    Grid.Column="1"
                    Grid.Row="3"
                    Height="Auto"
                    Width="Auto"
                    HorizontalAlignment="Left"
                    Margin="2"
                    VerticalAlignment="Center"
                    />
                <Button 
                    Height="30"
                    Width="100"
                    Foreground="White"
                    Content="Добавить"
                    Grid.ColumnSpan="2"
                    Grid.Row="4"
                    Style="{DynamicResource ButtonEntry}" >
                </Button>
                <Button x:Name="btnAddEditMark"
                    Height="30"
                    Width="100"
                    Foreground="White"
                    Content="Добавить"
                    Grid.ColumnSpan="2"
                    Grid.Row="4"
                    Style="{DynamicResource ButtonEntry}"
                    Click="btnAddEditMark_Click">
                </Button>
                <WrapPanel  Grid.Column="1"
                    Grid.Row="2" Margin="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">

                    <ComboBox x:Name="cmbStudents" 
                    FontSize="15"
                    Grid.Column="1"
                    Grid.Row="3"
                    Height="Auto"
                    Width="Auto"
                    HorizontalAlignment="Left"
                    Margin="2"
                    VerticalAlignment="Center"
                    />

                </WrapPanel>
                <WrapPanel  Grid.Column="1"
                    Grid.Row="1" Margin="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
                    <TextBlock 
                    x:Name="txtLesson"
                    Foreground="White"
                    FontSize="15"
                    Grid.Column="0"
                    Grid.Row="3"
                    TextAlignment="Left"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    TextWrapping="WrapWithOverflow"
                    >Lesson</TextBlock>
                </WrapPanel>
                
               
            </Grid>
            
            
        </Border>
    </Grid>
</Page>
