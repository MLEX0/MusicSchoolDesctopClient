<Page x:Class="MusicSchoolDesctopClient.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicSchoolDesctopClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="Авторизация">
    <Page.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox" >

            <Setter Property="Foreground"  Value="#FFFFFF"></Setter>
            <Setter Property="BorderBrush"  Value="#061828"></Setter>
            <Setter Property="Background" Value="#62829E"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0,0,0"></Setter>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">

                        <Grid x:Name="root" 
                              Width="200" 
                              Height="25" 
                              SnapsToDevicePixels="True">

                            <Border x:Name="Backgroundd" 
                                    BorderThickness="3" 
                                    CornerRadius="10" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"/>

                            <ScrollViewer x:Name="PART_ContentHost" 
                                          BorderThickness="0" 
                                          IsTabStop="False"
                                          Background="{x:Null}"
                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                          Padding="{TemplateBinding Padding}"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" 
                                     Value="True">

                                <Setter Property="BorderBrush" 
                                        Value="#3D3108"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtoEntry" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"></Setter>
            <Setter Property="Foreground"  Value="#5A53A0"></Setter>
            <Setter Property="BorderBrush"  Value="#061828"></Setter>
            <Setter Property="Background" Value="#62829E"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                                BorderThickness="5"
                                BorderBrush="#061828" 
                                CornerRadius="10" 
                                Background="{TemplateBinding Background}">

                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>

                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#FF080B4B" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#FF080B1B" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" 
                                                        To="#FF1F246E" 
                                                        Duration="0:0:0.020"/>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#FF080B3B" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" 
                                                        To="#FF1F243E" 
                                                        Duration="0:0:0.020"/>
                                        
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        To="#FF131D54" 
                                                        Duration="0:0:0.020"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="PasswordStyle" 
               TargetType="PasswordBox">

            <Setter Property="Foreground"  Value="#FFFFFF"></Setter>
            <Setter Property="BorderBrush"  Value="#061828"></Setter>
            <Setter Property="Background" Value="#62829E"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0,0,0"></Setter>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid x:Name="root" 
                              Width="200" 
                              Height="25" 
                              SnapsToDevicePixels="True">

                            <Border x:Name="Backgroundd" 
                                    BorderThickness="3" 
                                    CornerRadius="10" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"/>

                            <ScrollViewer x:Name="PART_ContentHost" 
                                          BorderThickness="0" 
                                          IsTabStop="False"
                                          Background="{x:Null}"
                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                          Padding="{TemplateBinding Padding}"></ScrollViewer>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" 
                                     Value="True" >
                                <Setter Property="BorderBrush" 
                                        Value="#3D3108"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="450"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border CornerRadius="50" 
                Grid.Column="1" 
                Grid.Row="1" 
                Background="#4C779E">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Text="Авторизация" 
                           Foreground="White" 
                           FontSize="25"/>

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Grid.Row="1">


                    <TextBox x:Name="LoginBox" 
                             Margin="0 0 0 35" 
                             Style="{StaticResource TextBoxStyle}" />


                    <PasswordBox  
                        Style="{StaticResource PasswordStyle}" 
                        x:Name="PasswordBoxAuth" 
                        Visibility="Visible" 
                        Width="200" 
                        Height="25"/>

                    <TextBox Style="{StaticResource TextBoxStyle}" 
                             x:Name="TextBoxAuth" 
                             Visibility="Collapsed"  
                             Text="Password"  
                             Width="200" 
                             Height="25"/>

                </StackPanel>


                <TextBlock  IsHitTestVisible="False" 
                            FontSize="15" 
                            Grid.Row="1"  
                            Width="200" 
                            Height="25"
                            Foreground="#FFFFFF" 
                            Text="Email" 
                            Margin="50,2,50,110"/>


                <TextBlock  IsHitTestVisible="False" 
                            FontSize="15" 
                            Grid.Row="1"  
                            Width="200" 
                            Height="20"
                            Foreground="#FFFFFF" 
                            Text="Пароль" 
                            Margin="50,45,50,50"/>


                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            Grid.Row="2">

                    <Button Style="{StaticResource ButtoEntry}"  
                            Click="ButtonAuth_Click" 
                            x:Name="ButtonAuth" 
                            Width="150" 
                            Height="30">

                        <TextBlock Margin="0 0 0 0"
                                   FontSize="15" 
                                   Foreground="#FFFFFF"
                                   Text="Вход"/>

                    </Button>

                </StackPanel>
            </Grid>

        </Border>
    </Grid>
</Page>
